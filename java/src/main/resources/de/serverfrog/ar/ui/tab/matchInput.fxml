<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="main" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
          xmlns="http://javafx.com/javafx/10.0.1" fx:controller="de.serverfrog.ar.ui.tab.MatchInput">
    <rowConstraints>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="100.0"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="100.0"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="-Infinity"/>
    </columnConstraints>
    <children>
        <Label text="Date of Match" GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="15.0"/>
            </GridPane.margin>
        </Label>
        <DatePicker fx:id="matchDate" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                    minWidth="-Infinity" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
        <Label text="Outcome" GridPane.columnIndex="3" GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="15.0"/>
            </GridPane.margin>
        </Label>
        <ComboBox fx:id="outcome" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                  visibleRowCount="3" GridPane.columnIndex="4" GridPane.columnSpan="2">
            <GridPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </GridPane.margin>
        </ComboBox>
        <Button mnemonicParsing="false" onAction="#chooseOwnClan" text="Choose" GridPane.columnIndex="2"
                GridPane.rowIndex="1"/>
        <Label text="Own Clan" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </GridPane.margin>
        </Label>
        <Label fx:id="ownClanName" text="&lt;Please Choose&gt;" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
               GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </GridPane.margin>
        </Label>
        <Label text="Enemy Clan" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </GridPane.margin>
        </Label>
        <Label fx:id="enemyClanName" text="&lt;Please Choose&gt;" GridPane.columnIndex="4" GridPane.halignment="RIGHT"
               GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </GridPane.margin>
        </Label>
        <Button mnemonicParsing="false" onAction="#chooseEnemyClan" text="Choose" GridPane.columnIndex="5"
                GridPane.rowIndex="1"/>
    </children>
</GridPane>
